<!DOCTYPE html>
<html>
  <head>
    <title>TodoApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <nav>
      <ul>
        <% if current_user.present? %>
          <li> <%= current_user.email %> </li>
        <% else %>
          <li><%= link_to 'Entrar', new_user_session_path %> | </li>
        <% end %> 
      </ul>
    </nav>
    <%= notice %>
    <%= alert %>
    <%= yield %>
  </body>
</html>
